# Koncurent Hi-LYTE Environment Configuration
# Copy this file to .env and update with your actual values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-secret-key-change-in-production

# MySQL Database Configuration
MYSQL_USER=root
MYSQL_PASSWORD=your-mysql-password
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=koncurent_hilyte_dev

# AI Services
ANTHROPIC_API_KEY=your-anthropic-api-key

# External Integrations
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
SENDGRID_API_KEY=your-sendgrid-api-key

# Procore Integration
PROCORE_CLIENT_ID=your-procore-client-id
PROCORE_CLIENT_SECRET=your-procore-client-secret
PROCORE_COMPANY_ID=your-procore-company-id
PROCORE_ENVIRONMENT=sandbox

# Autodesk Integration
AUTODESK_CLIENT_ID=your-autodesk-client-id
AUTODESK_CLIENT_SECRET=your-autodesk-client-secret

# Background Processing (Redis)
REDIS_URL=redis://localhost:6379/0